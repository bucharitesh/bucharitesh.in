{
  "display": "Next.js",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "content-collections": ["./.content-collections/generated"],
      "@/components/bucharitesh/*": ["./registry/default/bucharitesh/*"],
      "@/components/example/*": ["./registry/default/example/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": false,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force",
    "target": "ES2022",
    "strictNullChecks": true,
    "declaration": false
  },
  "exclude": [
    "node_modules",
    "old",
    "scripts/build-registry.ts",
    "__registry__",
    "packages/**/*",
    "scripts/**/*"
  ],
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".content-colletions/generated"
  ]
}
